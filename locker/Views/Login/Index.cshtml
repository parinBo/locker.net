@{
    Layout = null;
}
@model locker.Models.User
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/signin.css" />
<form class="form-signin" method="post" action="/login/authLogin">
    @*<img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
    <h1 class="h3 mb-5 mt-3 font-weight-normal " style="color: white;">Please sign in</h1>
    <p style="color:red;background-color:wheat">@ViewBag.msg</p>
    <label for="inputEmail" class="sr-only">Username</label>
    @Html.TextBoxFor(m => m.Username, new { @class = "form-control mt-2", @required = "required", autofocus = "autofocus", @placeholder = "Username" })
    <label for="inputPassword" class="sr-only">Password</label>
    @Html.PasswordFor(m => m.Password, new { @class = "form-control mt-3", @placeholder = "password", @required = "required" })
    <div class="row mt-3">
        <div class="col-9" style="color: white;">Don't have a account?</div>
        <div class="col-3 "><a class="btn btn-outline-info" style="color: white;" href="/login/regis">regis</a></div>
    </div><br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>
<script>
     if ('@ViewBag.isLogin' === 'true') {
        alert(`@ViewBag.msgg`)
     }
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>